<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="#EBEBEB"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21st Jan Good Run"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_trip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 Jan 2019 15:23" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_trip_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/ic_running"
            android:gravity="center_vertical"
            android:text="1337m"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_trip_elevgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/ic_chart"
            android:gravity="center_vertical"
            android:text="51m " />

        <TextView
            android:id="@+id/view_trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/ic_time"
            android:gravity="center_vertical"
            android:text="1h20m" />

        <TextView
            android:id="@+id/view_trip_unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:text="aaa???"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>